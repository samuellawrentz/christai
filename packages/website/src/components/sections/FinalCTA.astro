---
// Import UI components
import { buttonVariants } from "@christianai/ui";

const buttonClass = buttonVariants({ variant: "default", size: "lg" });
---

<section
  id="final-cta"
  class="mx-auto mt-32 max-w-4xl rounded-2xl bg-gradient-to-r from-blue-600 to-indigo-600 p-12 text-center text-white shadow-xl"
>
  <h2 class="mb-4 font-bold text-4xl">Ready to Begin Your Journey?</h2>
  <p class="mb-8 text-xl opacity-90">
    Sign up now to start your journey with ChristianAI
  </p>
   <a
     href="https://app.christianai.world/signup"
     target="_blank"
     rel="noopener noreferrer"
     onclick="if(window.gtag){gtag('event', 'sign_up', {source: 'final_cta'});}"
     class={`${buttonClass} hover:bg-blue-50 bg-transparent border border-white`}
   >
     Get Started Free
   </a>
   <p class="text-blue-100 text-sm mt-4">
     Free in beta â€¢ No credit card required
   </p>
</section>
