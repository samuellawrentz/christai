---
// Features Hero Section
import { buttonVariants } from "@christianai/ui";
import { MessageCircle } from '@lucide/astro';

const buttonClass = buttonVariants({ variant: "default", size: "lg" });
---

<section class="relative overflow-hidden bg-white">
  <div class="container mx-auto px-4 py-20 lg:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-semibold tracking-tight text-gray-900 mb-6">
        Features built for your faith journey
      </h1>

      <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-3xl mx-auto leading-relaxed font-normal">
        Everything you need to have meaningful, Scripture-grounded conversations with biblical figures.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
         <a
           href="https://app.christianai.world"
           target="_blank"
           rel="noopener noreferrer"
           class={`${buttonClass} group bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 text-lg font-medium rounded-full transition-all`}
         >
           Start Your Journey
           <MessageCircle aria-hidden="true" class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" />
         </a>
      </div>
      <div>
         <p class="text-gray-500 text-sm mt-4">
           No credit card required
         </p>
      </div>
    </div>
  </div>
</section>
