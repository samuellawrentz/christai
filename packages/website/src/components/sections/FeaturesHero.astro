---
// Features Hero Section
import { buttonVariants } from "@christianai/ui";
import { Sparkles, MessageCircle } from '@lucide/astro';

const buttonClass = buttonVariants({ variant: "default", size: "lg" });
---

<section class="relative overflow-hidden bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="container mx-auto px-4 py-20 lg:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6">
        <Sparkles aria-hidden="true" class="h-4 w-4" />
        Discover ChristianAI Features
      </div>

      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
        Experience <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Meaningful</span> Biblical Conversations
      </h1>

      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
        Unlock the power of AI-driven spiritual guidance with our comprehensive suite of features designed to deepen your faith journey and connect you with biblical wisdom.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="https://app.christianai.world"
          target="_blank"
          rel="noopener noreferrer"
          class={`${buttonClass} group bg-gradient-to-r from-blue-600 to-blue-700 text-white px-8 py-4 text-lg font-semibold`}
        >
          Start Your Journey
          <MessageCircle aria-hidden="true" class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" />
        </a>

        <a
          href="#core-features"
          class="text-blue-600 hover:text-blue-700 font-semibold text-lg px-6 py-4 transition-colors duration-200"
        >
          Explore Features â†“
        </a>
      </div>
    </div>
  </div>

  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-200 rounded-full opacity-20 blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-200 rounded-full opacity-20 blur-3xl"></div>
  </div>
</section>