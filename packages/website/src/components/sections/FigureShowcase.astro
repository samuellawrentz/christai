---
const figures = [
  {
    slug: 'jesus',
    name: 'Jesus Christ',
    title: 'Son of God',
    description: 'Experience divine love and eternal wisdom through conversations rooted in the Gospels.'
  },
  {
    slug: 'moses',
    name: 'Moses',
    title: 'Lawgiver of Israel',
    description: 'Receive guidance from the great leader who led Israel from bondage to freedom.'
  },
  {
    slug: 'joshua',
    name: 'Joshua',
    title: 'Conqueror of Canaan',
    description: 'Connect with unwavering courage and faith that led Israel into the Promised Land.'
  },
  {
    slug: 'david',
    name: 'King David',
    title: 'Shepherd King',
    description: 'Engage with poetic wisdom and the spiritual insights behind the Psalms.'
  }
];
---

<section class="py-24 lg:py-32 bg-[var(--color-parchment)]">
  <div class="container mx-auto px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <p class="text-[var(--color-ochre)] text-sm tracking-[0.3em] uppercase mb-4">
        Your Guides Await
      </p>
      <h2 class="text-4xl lg:text-5xl text-[var(--color-ink)] mb-6">
        Meet the <span class="italic">Figures</span>
      </h2>
      <div class="sacred-divider max-w-xs mx-auto">
        <span class="text-2xl">&#10041;</span>
      </div>
    </div>

    <!-- Figure cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-5 max-w-6xl mx-auto stagger-children">
      {figures.map((figure, index) => (
        <a
          href={`https://app.christianai.world/chats/new/${figure.slug}`}
          target="_blank"
          rel="noopener noreferrer"
          class="figure-card group relative aspect-[3/4] overflow-hidden"
          style={`animation-delay: ${0.1 * index}s`}
        >
          <!-- Image -->
          <img
            src={`https://app.christianai.world/images/${figure.slug}.webp`}
            alt={figure.name}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            loading="lazy"
          />

          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-ink)] via-[var(--color-ink)]/50 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300" />

          <!-- Content -->
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <p class="text-xs text-[var(--color-ochre-light)] uppercase tracking-wider mb-1 italic">
              {figure.title}
            </p>
            <h3 class="font-['Baskervville'] text-2xl leading-tight mb-2 group-hover:text-[var(--color-ochre-light)] transition-colors">
              {figure.name}
            </h3>
            <p class="text-sm text-white/70 leading-relaxed">
              {figure.description}
            </p>
          </div>

          <!-- Hover corner accents -->
          <div class="absolute top-4 left-4 w-5 h-5 border-t-2 border-l-2 border-[var(--color-ochre)] opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:-translate-x-1 group-hover:-translate-y-1" />
          <div class="absolute bottom-4 right-4 w-5 h-5 border-b-2 border-r-2 border-[var(--color-ochre)] opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:translate-x-1 group-hover:translate-y-1" />
        </a>
      ))}
    </div>

    <!-- More figures link -->
    <div class="text-center mt-12">
      <p class="text-[var(--color-warm-gray)] mb-6 italic">
        And 10 more biblical figures available...
      </p>
      <a
        href="/"
        class="text-[var(--color-ochre)] hover:text-[var(--color-terracotta)] transition-colors text-sm tracking-wider uppercase inline-flex items-center gap-2"
      >
        View All Figures
        <span class="text-lg">&rarr;</span>
      </a>
    </div>
  </div>
</section>
