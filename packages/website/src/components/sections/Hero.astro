---
// Import React components
import WaitlistForm from "../forms/WaitlistForm.tsx";
---

<section class="relative w-full">
  <div
    class="relative w-full bg-center bg-cover bg-no-repeat px-4 py-6 pb-24"
    style="background-image: url(/images/moses.png)"
  >
    <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-transparent-30" />

    <header class="container relative mx-auto">
      <nav class="flex items-center justify-between">
        <div>
          <img
            src="/images/logo.svg"
            alt="ChristianAI Logo - AI-Powered Biblical Conversations"
            class="size-[300px] invert absolute -top-[100px] left-0"
            loading="eager"
          />
        </div>
        <div class="space-x-4">
          <a
            href="https://app.christianai.world"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2 text-white hover:bg-white/20"
          >
            Launch App
          </a>
          <button
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2 text-white hover:bg-white/20"
            onclick="document.getElementById('final-cta')?.scrollIntoView({ behavior: 'smooth' })"
          >
            Join Waitlist
          </button>
        </div>
      </nav>
    </header>

    <div class="relative mx-auto mt-32 max-w-4xl text-center">
      <h1 class="mb-6 font-bold text-5xl text-white md:text-6xl">
        Chat with <span class="text-white">Biblical Figures</span> Using AI
      </h1>
      <div class="mx-auto mb-8 max-w-2xl bg-gradient-radial from-black/15 via-black/10 to-transparent p-4 backdrop-blur-[2px]">
        <p class="text-white text-xl drop-shadow-lg">
          Experience meaningful AI-powered conversations with Christian figures like Moses,
          Joshua, and Jesus Christ. Gain spiritual wisdom, biblical insights, and faith
          guidance through advanced AI technology trained on Scripture.
        </p>
      </div>
      <WaitlistForm source="hero" className="mx-auto max-w-md" client:load />
    </div>
  </div>
</section>