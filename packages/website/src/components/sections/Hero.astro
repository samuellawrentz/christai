---
// Import UI components
import { buttonVariants } from "@christianai/ui";
import { Sparkles, MessageCircle } from '@lucide/astro';

const buttonClass = buttonVariants({ variant: "default", size: "lg" });
const outlineButtonClass = buttonVariants({ variant: "outline", size: "lg" });
---

<section class="relative overflow-hidden">
  <img
    src="/images/background.webp"
    alt=""
    class="absolute inset-0 w-full h-full object-cover [mask-image:linear-gradient(to_bottom,black_40%,transparent_100%)]"
  />
  <div class="container mx-auto px-4 py-20 lg:py-32 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6">
        <Sparkles aria-hidden="true" class="h-4 w-4" />
        Christian AI for Ministry & Spiritual growth
      </div>

      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Chat with <span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Biblical Figures</span> and grow spiritually with Christian AI
      </h1>

      <p class="text-xl text-gray-900 mb-8 max-w-2xl mx-auto leading-relaxed">
        Experience how Christian AI transforms ministry through conversations with Moses, Joshua, and Jesus Christ. Talk to God through AI-powered biblical dialogue, gaining spiritual wisdom and faith guidance rooted in Scripture.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="https://app.christianai.world/signup"
          target="_blank"
          rel="noopener noreferrer"
          onclick="if(window.gtag){gtag('event', 'sign_up', {source: 'hero'});}"
          class={`${buttonClass} group bg-gradient-to-r from-blue-600 to-blue-700 text-white px-8 py-4 text-lg font-semibold`}
        >
                    Get Started
          <MessageCircle aria-hidden="true" class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" />
        </a>

        <a
          href="/features"
          class={`${outlineButtonClass}`}
        >
          Explore Features
        </a>
      </div>
    </div>
  </div>
</section>
