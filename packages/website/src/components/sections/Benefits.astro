---
// Benefits Section Component
import { Book, Shield, Zap, Users } from '@lucide/astro';
---

<section class="mx-auto mt-32 max-w-6xl rounded-2xl bg-white p-12 shadow-lg">
  <h2 class="mb-12 text-center font-bold text-4xl text-gray-900">
    Why Choose ChristianAI?
  </h2>
  <div class="grid gap-8 md:grid-cols-2">
     <!-- Biblically Grounded -->
     <article class="flex gap-4">
       <div class="flex-shrink-0">
         <Book aria-hidden="true" class="h-8 w-8 text-blue-600" />
       </div>
      <div>
        <h3 class="mb-2 font-semibold text-gray-900 text-xl">Biblically Grounded</h3>
        <p class="text-gray-600">
          Every conversation is rooted in Scripture and authentic Christian teachings, providing spiritually sound guidance
        </p>
      </div>
    </article>

     <!-- Safe & Private -->
     <article class="flex gap-4">
       <div class="flex-shrink-0">
         <Shield aria-hidden="true" class="h-8 w-8 text-blue-600" />
       </div>
      <div>
        <h3 class="mb-2 font-semibold text-gray-900 text-xl">Safe & Private</h3>
        <p class="text-gray-600">
          Your conversations are completely private and secure. We respect your spiritual journey and protect your data
        </p>
      </div>
    </article>

     <!-- Available 24/7 -->
     <article class="flex gap-4">
       <div class="flex-shrink-0">
         <Zap aria-hidden="true" class="h-8 w-8 text-blue-600" />
       </div>
      <div>
        <h3 class="mb-2 font-semibold text-gray-900 text-xl">Available 24/7</h3>
        <p class="text-gray-600">
          Access spiritual guidance whenever you need it, day or night, from anywhere in the world
        </p>
      </div>
    </article>

     <!-- Growing Community -->
     <article class="flex gap-4">
       <div class="flex-shrink-0">
         <Users aria-hidden="true" class="h-8 w-8 text-blue-600" />
       </div>
      <div>
        <h3 class="mb-2 font-semibold text-gray-900 text-xl">Growing Community</h3>
        <p class="text-gray-600">
          Join thousands of believers using AI to deepen their understanding of faith and Scripture
        </p>
      </div>
    </article>
  </div>
</section>