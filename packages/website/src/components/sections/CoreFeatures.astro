---
import {
  MessageCircle,
  Users,
  Clock,
  Settings,
  BookOpen,
  Shield,
  Zap,
  Heart
} from '@lucide/astro';

const features = [
  {
    icon: MessageCircle,
    title: "Biblical Figure Conversations",
    description: "Engage in meaningful dialogues with figures from Scripture, drawing from their stories and teachings."
  },
  {
    icon: Zap,
    title: "Real-time Responses",
    description: "Experience smooth, natural conversations with instant responses powered by cutting-edge AI streaming."
  },
  {
    icon: Clock,
    title: "Conversation History",
    description: "Access your complete chat history, organized by date, to revisit and reflect on previous conversations."
  },
  {
    icon: Settings,
    title: "Personalized Experience",
    description: "Customize your conversations with preferences for pronouns, age group, tone, and Bible translation."
  },
  {
    icon: BookOpen,
    title: "Multiple Translations",
    description: "Choose from various Bible translations including NIV, ESV, KJV, and others to align with your reading style."
  },
  {
    icon: Shield,
    title: "Secure & Private",
    description: "Your conversations are protected with enterprise-grade security, keeping your discussions confidential."
  },
  {
    icon: Users,
    title: "24/7 Availability",
    description: "Access spiritual guidance anytime, day or night, whenever you need encouragement or wisdom."
  },
  {
    icon: Heart,
    title: "Biblically Grounded",
    description: "Every conversation is rooted in Scripture, providing faithful interpretations aligned with biblical teachings."
  }
];
---

<section class="py-24 lg:py-32 bg-[var(--color-cream)] relative overflow-hidden">
  <!-- Decorative background pattern -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%231a1612\" fill-opacity=\"1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');" />

  <div class="container mx-auto px-6 lg:px-8 relative">
    <!-- Section header -->
    <div class="text-center mb-20">
      <p class="text-[var(--color-ochre-dark)] text-sm tracking-[0.3em] uppercase mb-4">
        Everything You Need
      </p>
      <h2 class="text-4xl lg:text-5xl text-[var(--color-ink)] mb-6">
        Core <span class="italic">Features</span>
      </h2>
      <div class="sacred-divider max-w-xs mx-auto">
        <span class="text-2xl">&#10041;</span>
      </div>
    </div>

    <!-- Features grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 max-w-7xl mx-auto stagger-children">
      {features.map((feature, index) => (
        <article
          class="group relative bg-[var(--color-parchment)] p-8 transition-all duration-500 hover:bg-white ornament-corners"
          style={`animation-delay: ${0.1 * index}s`}
        >
          <!-- Icon -->
          <div class="w-14 h-14 rounded-full bg-[var(--color-ink)] flex items-center justify-center mb-6 group-hover:bg-[var(--gradient-sacred)] transition-colors duration-300">
            <feature.icon class="w-6 h-6 text-[var(--color-ochre-light)]" />
          </div>

          <!-- Content -->
          <h3 class="text-xl text-[var(--color-ink)] mb-3 group-hover:text-[var(--color-ochre)] transition-colors">
            {feature.title}
          </h3>
          <p class="text-[var(--color-warm-gray)] leading-relaxed text-sm">
            {feature.description}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
