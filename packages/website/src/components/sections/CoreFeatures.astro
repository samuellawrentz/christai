---
// Core Features Section - 6 Key Features
import {
  MessageCircle,
  Users,
  BookOpen,
  Shield,
  Zap,
  Heart
} from '@lucide/astro';
---

<section id="core-features" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Everything you need
      </h2>
      <p class="text-lg text-gray-600">
        Biblical conversations. Instant guidance. Always private.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-x-12 gap-y-16 max-w-5xl mx-auto">

      <!-- Feature 1: Biblical Figures -->
      <article class="group">
        <div class="mb-4">
          <MessageCircle aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Biblical Figures</h3>
        <p class="text-gray-600 leading-relaxed">
          Conversations with Moses, Joshua, and Jesus—each response drawn from their actual words and stories in Scripture.
        </p>
      </article>

      <!-- Feature 2: Real-time -->
      <article class="group">
        <div class="mb-4">
          <Zap aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Real-time</h3>
        <p class="text-gray-600 leading-relaxed">
          Instant responses. No waiting. Just type and receive.
        </p>
      </article>

      <!-- Feature 3: Bible Translations -->
      <article class="group">
        <div class="mb-4">
          <BookOpen aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Bible Translations</h3>
        <p class="text-gray-600 leading-relaxed">
          NIV, ESV, KJV—read Scripture in the translation that speaks to you.
        </p>
      </article>

      <!-- Feature 4: Privacy -->
      <article class="group">
        <div class="mb-4">
          <Shield aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Privacy</h3>
        <p class="text-gray-600 leading-relaxed">
          Your conversations stay between you and God. Private by default.
        </p>
      </article>

      <!-- Feature 5: 24/7 -->
      <article class="group">
        <div class="mb-4">
          <Users aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">24/7</h3>
        <p class="text-gray-600 leading-relaxed">
          Day or night, whenever you need guidance.
        </p>
      </article>

      <!-- Feature 6: Biblically Grounded -->
      <article class="group">
        <div class="mb-4">
          <Heart aria-hidden="true" class="h-5 w-5 text-gray-400" />
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Biblically Grounded</h3>
        <p class="text-gray-600 leading-relaxed">
          Every response rooted in Scripture. Faithful to the Word.
        </p>
      </article>

    </div>

    <div class="text-center mt-20">
      <a
        href="https://app.christianai.world"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-gray-900 text-white px-6 py-3 rounded-full font-medium hover:bg-gray-800 transition-colors"
      >
        Get started
      </a>
    </div>
  </div>
</section>