---
// Features CTA Section - Multiple CTAs for user engagement
import { buttonVariants } from "@christianai/ui";
import { MessageCircle, Sparkles, Heart, ArrowRight } from '@lucide/astro';

const primaryButtonClass = buttonVariants({ variant: "default", size: "lg" });
---

<section class="py-20 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">

      <!-- Main headline -->
      <div class="mb-8">
        <Sparkles aria-hidden="true" class="w-12 h-12 mx-auto mb-6 text-blue-100" />
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Begin Your Spiritual Journey?
        </h2>
        <p class="text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed">
          Join thousands of believers who are deepening their faith through meaningful conversations with biblical figures powered by AI.
        </p>
      </div>

      <!-- Primary CTA -->
      <div class="mb-12">
        <a
          href="https://app.christianai.world"
          target="_blank"
          rel="noopener noreferrer"
          class={`${primaryButtonClass} group bg-white text-blue-600 hover:bg-blue-50 px-10 py-5 text-xl font-bold rounded-lg shadow-2xl hover:shadow-3xl transition-all duration-300 mb-6 inline-block`}
        >
          Start Your First Conversation
          <MessageCircle aria-hidden="true" class="w-6 h-6 ml-3 transition-transform duration-300 group-hover:translate-x-1" />
        </a>
        <p class="text-blue-100 text-sm">
          Free to start â€¢ No credit card required â€¢ Join instantly
        </p>
      </div>

      <!-- Secondary CTAs -->
      <div class="grid md:grid-cols-3 gap-6 max-w-3xl mx-auto">

        <a
          href="https://app.christianai.world/chats/new/jesus"
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6 hover:bg-white/20 transition-all duration-300"
        >
          <Heart aria-hidden="true" class="w-8 h-8 mx-auto mb-3 text-blue-100 group-hover:text-white transition-colors" />
          <h3 class="font-semibold text-lg mb-2">Chat with Jesus</h3>
          <p class="text-blue-100 text-sm leading-relaxed">
            Experience divine love and eternal wisdom
          </p>
          <div class="mt-3 flex items-center justify-center text-blue-100 group-hover:text-white transition-colors">
            <span class="text-sm font-medium">Start Now</span>
            <ArrowRight aria-hidden="true" class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" />
          </div>
        </a>

        <a
          href="https://app.christianai.world/chats/new/moses"
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6 hover:bg-white/20 transition-all duration-300"
        >
          <MessageCircle aria-hidden="true" class="w-8 h-8 mx-auto mb-3 text-blue-100 group-hover:text-white transition-colors" />
          <h3 class="font-semibold text-lg mb-2">Chat with Moses</h3>
          <p class="text-blue-100 text-sm leading-relaxed">
            Receive guidance from the great prophet
          </p>
          <div class="mt-3 flex items-center justify-center text-blue-100 group-hover:text-white transition-colors">
            <span class="text-sm font-medium">Start Now</span>
            <ArrowRight aria-hidden="true" class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" />
          </div>
        </a>

        <a
          href="https://app.christianai.world/chats/new/joshua"
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6 hover:bg-white/20 transition-all duration-300"
        >
          <MessageCircle aria-hidden="true" class="w-8 h-8 mx-auto mb-3 text-blue-100 group-hover:text-white transition-colors" />
          <h3 class="font-semibold text-lg mb-2">Chat with Joshua</h3>
          <p class="text-blue-100 text-sm leading-relaxed">
            Connect with unwavering courage and faith
          </p>
          <div class="mt-3 flex items-center justify-center text-blue-100 group-hover:text-white transition-colors">
            <span class="text-sm font-medium">Start Now</span>
            <ArrowRight aria-hidden="true" class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" />
          </div>
        </a>

      </div>

      <!-- Additional encouragement -->
      <div class="mt-12 pt-8 border-t border-white/20">
        <p class="text-blue-100 text-lg">
          ðŸŒŸ <strong>Join a growing community</strong> of believers strengthening their faith through AI-powered biblical conversations
        </p>
      </div>

    </div>
  </div>
</section>