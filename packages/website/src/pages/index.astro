---
// Import components
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import Benefits from '../components/sections/Benefits.astro';
import FAQ from '../components/sections/FAQ.astro';
import Technology from '../components/sections/Technology.astro';
import FinalCTA from '../components/sections/FinalCTA.astro';
import Footer from '../components/sections/Footer.astro';
---

<BaseLayout
  title="ChristianAI - Chat with Biblical Figures Using AI | Spiritual Guidance & Biblical Wisdom"
  description="Experience meaningful conversations with Christian figures like Moses, Joshua, and Jesus through advanced AI technology. Join our waitlist for spiritual guidance and biblical wisdom."
  image="/og_image.png"
>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <Hero />
    <main class="container mx-auto px-4 py-16">
      <Features />
      <HowItWorks />
      <Benefits />
      <FAQ />
      <Technology />
      <FinalCTA />
    </main>
    <Footer />
  </div>
</BaseLayout>
