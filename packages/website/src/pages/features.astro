---
// Import components
import BaseLayout from '../layouts/BaseLayout.astro';
import FeaturesHero from '../components/sections/FeaturesHero.astro';
import CoreFeatures from '../components/sections/CoreFeatures.astro';
import FigureShowcase from '../components/sections/FigureShowcase.astro';
import Technology from '../components/sections/Technology.astro';
import FeaturesCTA from '../components/sections/FeaturesCTA.astro';
import Footer from '../components/sections/Footer.astro';
---

<BaseLayout
  title="Features - ChristianAI | AI Biblical Conversations & Spiritual Guidance"
  description="Explore ChristianAI features: chat with biblical figures, personalized AI conversations, conversation history, custom preferences, and more. Experience meaningful spiritual guidance."
  image="/og_image.png"
  url="/features"
>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <FeaturesHero />
    <main class="container mx-auto px-4 py-16">
      <CoreFeatures />
      <FigureShowcase />
      <Technology />
      <FeaturesCTA />
    </main>
    <Footer />
  </div>
</BaseLayout>