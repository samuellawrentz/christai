{
  "name": "christianai",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter website dev & bun run --filter app dev & bun run --filter api dev",
    "dev:website": "bun run --filter website dev",
    "dev:app": "bun run --filter app dev",
    "dev:api": "bun run --filter api dev",
    "build": "bun run --filter website build && bun run --filter app build",
    "build:website": "bun run --filter website build",
    "build:app": "bun run --filter app build",
    "lint": "biome check packages/",
    "lint:fix": "biome check --write packages/",
    "format": "biome format --write packages/",
    "typecheck": "bun run --filter website typecheck && bun run --filter app typecheck && bun run --filter api typecheck && bun run --filter ui typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,astro}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/supabase-js": "^2.87.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/postcss": "4.1.18",
    "@types/bun": "latest",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "^5",
    "vite": "^7.2.7"
  }
}
